<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_khs_layout"
    android:clickable="true"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fragment_khs_container_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:id="@+id/fragment_khs_container_toolbar_arrow_back"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal">
            <Button
                android:id="@+id/fragment_khs_button_toolbar_arrow_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_arrow_back" />
        </LinearLayout>
        <TextView
            android:id="@+id/fragment_khs_text_toolbar_title"
            android:text="Kartu Hasil Studi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/fragment_khs_container_toolbar_arrow_back"
            android:textColor="#FAFAFA"
            android:textSize="@dimen/toolbar_title_text_size"
            />
        <TextView
            android:id="@+id/fragment_khs_text_toolbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/fragment_khs_container_toolbar_arrow_back"
            android:layout_below="@id/fragment_khs_text_toolbar_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Semester"
            android:textColor="#EEEEEE"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/fragment_khs_container_toolbar_more"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal">
            <Button
                android:id="@+id/fragment_khs_button_toolbar_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_more" />
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_khs_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/fragment_khs_container_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_khs_container_toolbar">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.CardView
        android:id="@+id/fragment_khs_container_summary"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/fragment_khs_recyclerview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_khs_text_label_sks"
                android:text="Jumlah SKS: "
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_khs_text_sks"
                android:text="0"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/fragment_khs_text_label_sks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_khs_text_label_subject"
                android:text="Jumlah Matakuliah: "
                android:layout_marginStart="8dp"
                android:layout_below="@id/fragment_khs_text_label_sks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_khs_text_subject"
                android:text="0"
                android:layout_below="@id/fragment_khs_text_sks"
                android:layout_toEndOf="@id/fragment_khs_text_label_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_khs_text_label_mean"
                android:text="Indeks Prestasi Semester: "
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/fragment_khs_text_label_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_khs_text_mean"
                android:text="0"
                android:layout_below="@id/fragment_khs_text_subject"
                android:layout_toEndOf="@id/fragment_khs_text_label_mean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ProgressBar
        android:id="@+id/fragment_khs_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</android.support.constraint.ConstraintLayout>