<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_chat_info_layout"
    android:clickable="true"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fragment_chat_info_container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/fragment_chat_info_container_toolbar_arrow_back"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal">
            <Button
                android:id="@+id/fragment_chat_info_button_toolbar_arrow_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_arrow_back" />
        </LinearLayout>
        <TextView
            android:id="@+id/fragment_chat_info_text_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/fragment_chat_info_container_toolbar_arrow_back"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Title"
            android:textColor="#FAFAFA"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/fragment_chat_info_text_toolbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/fragment_chat_info_container_toolbar_arrow_back"
            android:layout_below="@id/fragment_chat_info_text_toolbar_title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#EEEEEE"
            android:textSize="12sp" />
    </RelativeLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_chat_info_container_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_room_chat_right_background"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/fragment_chat_info_image_chat_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/fragment_chat_info_text_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Message"
            android:textColor="#212121"
            android:textSize="14sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_info_image_chat_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/fragment_chat_info_text_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.42 PM"
            android:textSize="12sp"
            android:textColor="#78A565"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@id/fragment_chat_info_image_chat_status"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_info_text_chat_message"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/fragment_chat_info_image_chat_status"
            android:src="@drawable/ic_done"
            android:tint="#6BA55B"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_info_text_chat_message"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_chat_info_container_file"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_room_chat_right_background"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0">
        <RelativeLayout
            android:id="@+id/fragment_chat_info_container_file_detail"
            android:background="#e4fcc8"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/fragment_chat_info_container_image_file"
                android:background="@drawable/ic_file_big"
                android:backgroundTint="#9E9E9E"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/fragment_chat_info_text_file_extension"
                    android:textSize="9sp"
                    android:text="EXE"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/fragment_chat_info_text_file_name"
                android:text="Example.exe"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/fragment_chat_info_container_image_file"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/fragment_chat_info_text_file_size"
            android:text="1.23 MB"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_info_container_file_detail"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/fragment_chat_info_text_file_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.42 PM"
            android:textSize="12sp"
            android:textColor="#78A565"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toEndOf="@id/fragment_chat_info_text_file_size"
            app:layout_constraintEnd_toStartOf="@id/fragment_chat_info_image_file_status"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_info_container_file_detail"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/fragment_chat_info_image_file_status"
            android:src="@drawable/ic_done"
            android:tint="#6BA55B"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_chat_info_container_file_detail"
            />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_chat_info_text_label_received"
                android:text="Diterima oleh"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_chat_info_recyclerview_received"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/fragment_chat_info_text_label_read"
                android:text="Dibaca oleh"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_chat_info_recyclerview_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>