<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_room_chat_file_left_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_room_chat_file_left_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_room_chat_left_background"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/item_room_chat_file_left_text_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:text="Sender"
            android:textColor="#673AB7"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RelativeLayout
            android:id="@+id/item_room_chat_file_left_container_detail"
            android:background="@drawable/item_room_chat_file_left_container_detail_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/item_room_chat_file_left_text_sender">
            <RelativeLayout
                android:id="@+id/item_room_chat_file_left_container_image_file"
                android:background="@drawable/ic_file_big"
                android:backgroundTint="#9E9E9E"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/item_room_chat_file_left_text_file_extension"
                    android:textSize="9sp"
                    android:text="EXE"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/item_room_chat_file_left_text_file_name"
                android:text="Example.exe"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_room_chat_file_left_container_image_file"
                android:layout_toStartOf="@id/item_room_chat_file_left_image_file_download"
                />
            <ImageView
                android:id="@+id/item_room_chat_file_left_image_file_download"
                android:src="@drawable/ic_download"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_room_chat_file_left_text_file_size"
            android:text="1.23 MB"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_room_chat_file_left_container_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            />
        <ProgressBar
            android:id="@+id/item_room_chat_file_left_progressbar_percentage"
            android:visibility="gone"
            android:progress="1"
            android:indeterminate="false"
            android:indeterminateTint="@color/colorPrimary"
            android:progressDrawable="@drawable/progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            app:layout_constraintStart_toStartOf="@id/item_room_chat_file_left_container"
            app:layout_constraintEnd_toEndOf="@id/item_room_chat_file_left_container"
            app:layout_constraintTop_toTopOf="@id/item_room_chat_file_left_container"
            app:layout_constraintBottom_toBottomOf="@id/item_room_chat_file_left_container"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/item_room_chat_file_left_text_progressbar_stop"
            android:text="X"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/item_room_chat_file_left_container"
            app:layout_constraintEnd_toEndOf="@id/item_room_chat_file_left_container"
            app:layout_constraintTop_toTopOf="@id/item_room_chat_file_left_container"
            app:layout_constraintBottom_toBottomOf="@id/item_room_chat_file_left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_room_chat_file_left_image_progressbar_reupload"
            android:src="@drawable/ic_refresh"
            android:visibility="gone"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@id/item_room_chat_file_left_container"
            app:layout_constraintEnd_toEndOf="@id/item_room_chat_file_left_container"
            app:layout_constraintTop_toTopOf="@id/item_room_chat_file_left_container"
            app:layout_constraintBottom_toBottomOf="@id/item_room_chat_file_left_container"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/item_room_chat_file_left_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light_italic"
            android:text="9.42 PM"
            android:textColor="#B6BBBF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_room_chat_file_left_container" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_room_chat_file_left_container_transparent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#5590CAF9">
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>