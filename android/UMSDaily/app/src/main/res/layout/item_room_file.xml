<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_room_file_layout"
    android:layout_margin="2dp"
    android:layout_width="100dp"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/item_room_file_image_file"
        android:src="@drawable/ic_file"
        android:tint="#9E9E9E"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/item_room_file_text_file_extension"
        android:textSize="11sp"
        android:text="EXE"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/item_room_file_image_file"
        app:layout_constraintEnd_toEndOf="@id/item_room_file_image_file"
        app:layout_constraintTop_toTopOf="@id/item_room_file_image_file"
        app:layout_constraintBottom_toBottomOf="@id/item_room_file_image_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_room_file_text_file_name"
        android:text="Example.exe"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_room_file_image_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/item_room_file_text_file_size"
        android:text="1.23 MB"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_room_file_text_file_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ProgressBar
        android:id="@+id/item_room_file_progressbar"
        android:progress="1"
        android:visibility="gone"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress"
        android:indeterminateTint="@color/colorPrimary"
        style="@android:style/Widget.ProgressBar.Horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <Button
        android:id="@+id/item_room_file_button_more"
        android:visibility="gone"
        android:background="@drawable/ic_keyboard_arrow_right"
        android:backgroundTint="#DDDDDD"
        android:layout_width="75dp"
        android:layout_height="75dp" />
</android.support.constraint.ConstraintLayout>