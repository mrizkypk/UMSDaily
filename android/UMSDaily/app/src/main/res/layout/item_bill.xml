<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bill_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_bill_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_bill_image"
            android:tint="@color/colorPrimary"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_money"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/item_bill_text_type"
            android:text="Pembayaran"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/item_bill_image"
            />
        <TextView
            android:id="@+id/item_bill_text_total"
            android:text="Total: 1.000.000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/item_bill_text_type"
            />
        <TextView
            android:id="@+id/item_bill_text_date"
            android:text="Tanggal: 30 Agustus 1995"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/item_bill_text_total"
            />
        <TextView
            android:id="@+id/item_bill_text_status"
            android:text="Status: Sudah Dibayar"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/item_bill_text_date"
            />
        <View
            android:background="#EEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_bill_text_status"
            />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>