<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_chat_home_layout"
    android:clickable="true"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fragment_chat_home_container_toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/fragment_chat_home_image_toolbar_logo"
            android:src="@drawable/ic_home"
            android:layout_width="@dimen/toolbar_logo_width"
            android:layout_height="@dimen/toolbar_logo_height"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/fragment_chat_home_text_toolbar_title"
            android:text="UMS Daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/fragment_chat_home_image_toolbar_logo"
            android:textColor="#FAFAFA"
            android:textSize="@dimen/toolbar_title_text_size"
            />
        <LinearLayout
            android:id="@+id/fragment_chat_home_container_toolbar_more"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal">
            <Button
                android:id="@+id/fragment_chat_home_button_toolbar_more"
                android:layout_width="@dimen/toolbar_more_width"
                android:layout_height="@dimen/toolbar_logo_height"
                android:background="@drawable/ic_more" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_chat_home_container_toolbar_plus"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/fragment_chat_home_container_toolbar_more"
            android:gravity="center_vertical|center_horizontal">
            <Button
                android:id="@+id/fragment_chat_home_button_toolbar_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_plus" />
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_chat_home_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_chat_home_container_toolbar"
        app:layout_constraintBottom_toTopOf="@id/fragment_chat_home_bottom_navigation_border"
        >
    </android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/fragment_chat_home_bottom_navigation_border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_chat_home_container_bottom_navigation"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_chat_home_container_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navigation_height"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/fragment_chat_home_badge_home"

            android:text="99"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_light"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/circular_textview"
            app:layout_constraintTop_toTopOf="@id/fragment_chat_home_container_menu_home"
            app:layout_constraintStart_toStartOf="@id/fragment_chat_home_container_menu_home"
            app:layout_constraintEnd_toEndOf="@id/fragment_chat_home_container_menu_home"
            app:layout_constraintHorizontal_bias="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_chat_home_badge_schedule"
            android:text="99"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_light"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/circular_textview"
            app:layout_constraintTop_toTopOf="@id/fragment_chat_home_container_menu_schedule"
            app:layout_constraintStart_toStartOf="@id/fragment_chat_home_container_menu_schedule"
            app:layout_constraintEnd_toEndOf="@id/fragment_chat_home_container_menu_schedule"
            app:layout_constraintHorizontal_bias="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_chat_home_badge_assignment"
            android:text="99"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_light"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/circular_textview"
            app:layout_constraintTop_toTopOf="@id/fragment_chat_home_container_menu_assignment"
            app:layout_constraintStart_toStartOf="@id/fragment_chat_home_container_menu_assignment"
            app:layout_constraintEnd_toEndOf="@id/fragment_chat_home_container_menu_assignment"
            app:layout_constraintHorizontal_bias="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_chat_home_badge_information"
            android:text="99"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_light"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/circular_textview"
            app:layout_constraintTop_toTopOf="@id/fragment_chat_home_container_menu_information"
            app:layout_constraintStart_toStartOf="@id/fragment_chat_home_container_menu_information"
            app:layout_constraintEnd_toEndOf="@id/fragment_chat_home_container_menu_information"
            app:layout_constraintHorizontal_bias="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />
        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />
        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />
        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <LinearLayout
            android:id="@+id/fragment_chat_home_container_menu_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline1">

            <Button
                android:id="@+id/fragment_chat_home_button_menu_home"
                android:layout_width="@dimen/bottom_navigation_icon_width"
                android:layout_height="@dimen/bottom_navigation_icon_height"
                android:background="@drawable/ic_home"
                android:backgroundTint="@color/colorMenuSelected" />

            <TextView
                android:id="@+id/fragment_chat_home_text_menu_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textColor="@color/textColorMenuSelected"
                android:textSize="@dimen/bottom_navigation_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_chat_home_container_menu_schedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/guideline1"
            app:layout_constraintEnd_toStartOf="@id/guideline2">

            <Button
                android:id="@+id/fragment_chat_home_button_menu_schedule"
                android:layout_width="@dimen/bottom_navigation_icon_width"
                android:layout_height="@dimen/bottom_navigation_icon_height"
                android:background="@drawable/ic_schedule"
                android:backgroundTint="@color/colorMenu" />

            <TextView
                android:id="@+id/fragment_chat_home_text_menu_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal"
                android:textColor="@color/textColorMenu"
                android:textSize="@dimen/bottom_navigation_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_chat_home_container_menu_assignment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintEnd_toStartOf="@id/guideline3">

            <Button
                android:id="@+id/fragment_chat_home_button_menu_assignment"
                android:layout_width="@dimen/bottom_navigation_icon_width"
                android:layout_height="@dimen/bottom_navigation_icon_height"
                android:background="@drawable/ic_assignment"
                android:backgroundTint="@color/colorMenu" />

            <TextView
                android:id="@+id/fragment_chat_home_text_menu_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tugas"
                android:textColor="@color/textColorMenu"
                android:textSize="@dimen/bottom_navigation_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_chat_home_container_menu_information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/guideline3"
            app:layout_constraintEnd_toStartOf="@id/guideline4">

            <Button
                android:id="@+id/fragment_chat_home_button_menu_information"
                android:layout_width="@dimen/bottom_navigation_icon_width"
                android:layout_height="@dimen/bottom_navigation_icon_height"
                android:background="@drawable/ic_information"
                android:backgroundTint="@color/colorMenu" />

            <TextView
                android:id="@+id/fragment_chat_home_text_menu_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi"
                android:textColor="@color/textColorMenu"
                android:textSize="@dimen/bottom_navigation_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_chat_home_container_menu_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/guideline4"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/fragment_chat_home_button_menu_search"
                android:layout_width="@dimen/bottom_navigation_icon_width"
                android:layout_height="@dimen/bottom_navigation_icon_height"
                android:background="@drawable/ic_search"
                android:backgroundTint="@color/colorMenu" />

            <TextView
                android:id="@+id/fragment_chat_home_text_menu_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencarian"
                android:textColor="@color/textColorMenu"
                android:textSize="@dimen/bottom_navigation_text_size" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/fragment_chat_home_text_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:text="Tidak Ada Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>